<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Step-CA Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/public/css/custom.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Step-CA UI</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbars" aria-controls="navbars" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div id="navbars" class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/ca">CA</a></li>
        <li class="nav-item"><a class="nav-link" href="/certs/new">Issue Cert</a></li>
        <li class="nav-item"><a class="nav-link" href="/certs/smime">S/MIME</a></li>
        <li class="nav-item"><a class="nav-link" href="/certs/renew">Renew</a></li>
        <li class="nav-item"><a class="nav-link" href="/certs/revoke">Revoke</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/certs">Admin</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/acme">ACME</a></li>
      </ul>
      <div class="d-flex">
        <% if (typeof user !== 'undefined' && user) { %>
          <div class="navbar-text me-3 text-white-50">Hello, <strong><%= user.name %></strong></div>
          <form method="post" action="/auth/logout" class="mb-0">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <button class="btn btn-outline-light btn-sm" type="submit">Logout</button>
          </form>
        <% } else { %>
          <a class="btn btn-outline-light btn-sm" href="/auth/login">Login</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
<main class="container py-4">
  <% if (typeof authBypassed !== 'undefined' && authBypassed) { %>
    <div class="alert alert-warning">
      Authentication is <strong>disabled</strong> for development
      (<code>AUTH_OPTIONAL=true</code> or OIDC not configured).
    </div>
  <% } %>
  <%- typeof body !== 'undefined' ? body : '' %>
  <%- typeof content !== 'undefined' ? content : '' %>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
