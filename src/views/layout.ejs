<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Certy</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/public/css/custom.css" rel="stylesheet">
</head>
<body>
<a href="#main-content" class="skip-link">Skip to main content</a>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Certy</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbars" aria-controls="navbars" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div id="navbars" class="collapse navbar-collapse">
      <% const cp = String(typeof currentPath !== 'undefined' ? currentPath : ''); %>
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link <%= cp.startsWith('/ca') ? 'active' : '' %>" href="/ca" <%= cp.startsWith('/ca') ? 'aria-current="page"' : '' %>>CA</a></li>
        <li class="nav-item"><a class="nav-link <%= cp.startsWith('/certs/new') ? 'active' : '' %>" href="/certs/new" <%= cp.startsWith('/certs/new') ? 'aria-current="page"' : '' %>>Issue Cert</a></li>
        <li class="nav-item"><a class="nav-link <%= cp.startsWith('/certs/smime') ? 'active' : '' %>" href="/certs/smime" <%= cp.startsWith('/certs/smime') ? 'aria-current="page"' : '' %>>S/MIME</a></li>
        <li class="nav-item"><a class="nav-link <%= cp.startsWith('/certs/renew') ? 'active' : '' %>" href="/certs/renew" <%= cp.startsWith('/certs/renew') ? 'aria-current="page"' : '' %>>Renew</a></li>
        <li class="nav-item"><a class="nav-link <%= cp.startsWith('/certs/revoke') ? 'active' : '' %>" href="/certs/revoke" <%= cp.startsWith('/certs/revoke') ? 'aria-current="page"' : '' %>>Revoke</a></li>
        <li class="nav-item"><a class="nav-link <%= cp.startsWith('/admin/certs') ? 'active' : '' %>" href="/admin/certs" <%= cp.startsWith('/admin/certs') ? 'aria-current="page"' : '' %>>Issued</a></li>
        <li class="nav-item"><a class="nav-link <%= cp.startsWith('/admin/acme') ? 'active' : '' %>" href="/admin/acme" <%= cp.startsWith('/admin/acme') ? 'aria-current="page"' : '' %>>ACME</a></li>
  <li class="nav-item"><a class="nav-link <%= cp.startsWith('/admin/audit') ? 'active' : '' %>" href="/admin/audit" <%= cp.startsWith('/admin/audit') ? 'aria-current="page"' : '' %>>Audit</a></li>
      </ul>
      <div class="d-flex">
        <% if (typeof user !== 'undefined' && user) { %>
          <div class="navbar-text me-3 text-white-50">Hello, <strong><%= user.name %></strong></div>
          <form method="post" action="/auth/logout" class="mb-0">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <button class="btn btn-outline-light btn-sm" type="submit">Logout</button>
          </form>
        <% } else { %>
          <a class="btn btn-outline-light btn-sm" href="/auth/login">Login</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
<main id="main-content" class="container py-4" role="main">
  <% if (typeof authBypassed !== 'undefined' && authBypassed) { %>
  <div class="alert alert-warning" role="alert">
      Authentication is <strong>disabled</strong> for development (OIDC not configured).
    </div>
  <% } %>
  <% if (Array.isArray(flashMessages) && flashMessages.length) { %>
    <% flashMessages.forEach(m => { %>
      <div class="alert alert-<%= m.type === 'error' ? 'danger' : (m.type === 'warn' ? 'warning' : 'success') %>" role="alert">
        <%= m.text %>
      </div>
    <% }) %>
  <% } %>
  <%- typeof body !== 'undefined' ? body : '' %>
  <%- typeof content !== 'undefined' ? content : '' %>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
