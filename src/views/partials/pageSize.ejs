<div class="col-sm-2">
  <label class="form-label">Page size</label>
  <select name="pageSize" class="form-select">
    <% (sizes || [10,20,50,100]).forEach(sz => { %>
      <option value="<%= sz %>" <%= Number(pageSize)===Number(sz)?'selected':'' %>><%= sz %></option>
    <% }) %>
  </select>
</div>
