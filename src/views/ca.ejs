<h2>Certificate Authority</h2>

<% const initialized = (typeof isInitialized !== 'undefined' && isInitialized); %>


<% if (typeof lifecycleEnabled !== 'undefined' && lifecycleEnabled) { %>
  <div class="row g-4 align-items-stretch">
    <div class="col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-body">
          <% if (!initialized) { %>
            <h5 class="card-title">Initialize CA</h5>
            <form method="post" action="/ca/init">
              <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
              <div class="mb-2">
                <label class="form-label">Name</label>
                <input name="name" class="form-control" placeholder="My Private CA" required>
              </div>
              <div class="mb-2">
                <label class="form-label">DNS (optional)</label>
                <input name="dns" class="form-control" placeholder="ca.local">
              </div>
              <div class="mb-2">
                <label class="form-label">Bind Address (ignored in local mode)</label>
                <input name="address" class="form-control" value="0.0.0.0:8443">
              </div>
              <button class="btn btn-primary" type="submit">Initialize</button>
            </form>
          <% } else { %>
            <h5 class="card-title">CA Status</h5>
            <div class="alert alert-success mb-0">
              The CA is initialized.
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
  <div class="card border-danger shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title text-danger">Destroy CA Data</h5>
          <p class="text-muted mb-3">Removes the local CA directory. Only enabled if <code>ENABLE_CA_LIFECYCLE=true</code>.</p>
          <form method="post" action="/ca/destroy">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <button class="btn btn-outline-danger" type="submit">Destroy</button>
          </form>
          <hr>
          <h6 class="text-danger">Rotate Keystore Secret</h6>
          <p class="text-muted">Re-encrypts keystore entries with the new <code>KEYSTORE_SECRET</code>.</p>
          <form method="post" action="/ca/rotate-keystore" onsubmit="return confirm('Rotate keystore entries to the new KEYSTORE_SECRET?');">
            <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
            <button class="btn btn-outline-warning" type="submit" <%= hasKeystoreSecretOld ? '' : 'disabled' %>>Rotate Keystore Secret</button>
            <% if (!hasKeystoreSecretOld) { %>
              <div class="form-text text-muted mt-2">
                Set <code>KEYSTORE_SECRET_OLD</code> in your environment to enable rotation, then restart the app.
              </div>
            <% } %>
          </form>
        </div>
      </div>
    </div>
  </div>
<% } %>

<hr>

<% if (!initialized) { %>
  <div class="alert alert-warning">
    The CA is not initialized yet. Initialize the CA before downloading root, intermediate, or CRL.
  </div>
<% } %>

<div class="row g-4">
  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title">Download Root Certificates</h5>
  <p class="text-muted">PEM bundle of all root CAs. Import into your OS or browser trust store to anchor the chain.</p>
        <div class="mt-auto">
          <a class="btn btn-outline-primary <%= initialized ? '' : 'disabled' %>"
             href="<%= initialized ? '/ca/download/root' : '#' %>"
             aria-disabled="<%= !initialized %>">roots.pem</a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title">Download Intermediate Certificates</h5>
  <p class="text-muted">PEM bundle of all intermediate CAs. Provide alongside leaf certificates for complete chains.</p>
        <div class="mt-auto">
          <a class="btn btn-outline-primary <%= initialized ? '' : 'disabled' %>"
             href="<%= initialized ? '/ca/download/intermediate' : '#' %>"
             aria-disabled="<%= !initialized %>">intermediates.pem</a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card shadow-sm h-100">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title">Certificate Revocation List (CRL)</h5>
        <p class="text-muted">Signed by the Intermediate CA. Generated on demand.</p>
        <% if (typeof s3Enabled !== 'undefined' && s3Enabled) { %>
          <div class="small text-muted mb-3">
            <% if (typeof s3PublicUrl !== 'undefined' && s3PublicUrl) { %>
              Public URL: <a href="<%= s3PublicUrl %>" target="_blank" rel="noopener"><%= s3PublicUrl %></a>
            <% } else { %>
              S3 publishing is enabled. Configure <code>S3_CRL_PUBLIC_URL</code> for a fixed public link (optional).
            <% } %>
          </div>
        <% } %>
        <div class="mt-auto d-flex gap-2">
          <a class="btn btn-outline-secondary <%= initialized ? '' : 'disabled' %>"
             href="<%= initialized ? '/ca/download/crl' : '#' %>"
             aria-disabled="<%= !initialized %>">Download CRL (PEM)</a>

          <% if (typeof s3Enabled !== 'undefined' && s3Enabled) { %>
            <form method="post" action="/ca/publish/crl" class="mb-0">
              <input type="hidden" name="_csrf" value="<%= typeof csrfToken !== 'undefined' ? csrfToken : '' %>">
              <button class="btn btn-success" type="submit" <%= initialized ? '' : 'disabled' %>>
                Publish to S3
              </button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/public/js/ca.js"></script>
